<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiBlazorApp.Pages.ViewCapture"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ViewCapture">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            TextColor="AliceBlue"
            VerticalOptions="Center" />
        <Button
            Clicked="ImagePreview_Clicked"
            Text="Capture"
            WidthRequest="200" />
        <Image x:Name="ImagePreview" HeightRequest="400" />
    </VerticalStackLayout>
</ContentPage>